0007:union(?:\s+|\s*/\*.*\*/\s*)(?:(all|distinct)(?:\s+|\s*/\*.*\*/\s*))?select(?:\s+|\s*/\*.*\*/\s*).+
0008:sleep\((?:\s+|\s*/\*.*\*/\s*)\d+(?:\s+|\s*/\*.*\*/\s*)\)
0009:select(?:\s+|\s*/\*.*\*/\s*)(?:system_user|user|database)(?:\s*|\s*/\*.*\*/\s*)\((?:\s*|\s*/\*.*\*/\s*)\)
